@model IEnumerable<EShop.Models.CartItem>

@{
    ViewBag.Title = "购物车";
}

<h2>购物车</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td><img src="/images/@Html.DisplayFor(modelItem => item.Product.ImageUrl)"
                 width="120 " height="120">           
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductCount)
        </td>
        <td>
            @Html.ActionLink("详细", "Details", new { id=item.Id }) |
        </td>
    </tr>
}

</table>
